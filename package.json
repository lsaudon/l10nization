{
  "icon": "images/logo.png",
  "name": "l10nization",
  "displayName": "L10nization",
  "version": "0.3.2",
  "publisher": "lsaudon",
  "description": "A tool for extracting text to arb files in a Flutter application.",
  "author": {
    "name": "Lucas SAUDON"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lsaudon/l10nization.git"
  },
  "bugs": {
    "url": "https://github.com/lsaudon/l10nization/issues"
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.72.0"
  },
  "keywords": [
    "flutter",
    "dart",
    "l10n",
    "localization",
    "arb"
  ],
  "license": "MIT",
  "activationEvents": [
    "onLanguage:dart",
    "workspaceContains:**/*.dart"
  ],
  "contributes": {
    "configuration": {
      "title": "L10nization",
      "properties": {
        "l10nization.appLocalizationsVariable": {
          "type": "string",
          "default": "l10n",
          "description": "Set the variable name for AppLocalizations."
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-lint": "eslint src --ext ts",
    "check-format": "prettier --ignore-path .gitignore --config .prettierrc  \"**/*.+(js|ts|json|md|yaml|.prettierrc)\" --check",
    "check-lint-format": "npm run check-lint && npm run check-format",
    "lint": "eslint src --ext ts --fix",
    "format": "prettier --ignore-path .gitignore --config .prettierrc  \"**/*.+(js|ts|json|md|yaml|.prettierrc)\" --write",
    "lint-format": "npm run lint && npm run format",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "18.11.9",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "ts-loader": "^9.4.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "yaml": "^2.1.3"
  }
}
